@page
@model LoginModel



<div class="text-center mt-4">
    <div class="mb-3">
        <a href="index.html" class="auth-logo">
            <img src="~/images/loci-logo.jpg" height="30" class="logo-dark mx-auto" alt="">
            @* <img src="~/assets/images/logo-light.png" height="30" class="logo-light mx-auto" alt=""> *@
        </a>
    </div>
</div>

<h4 class="text-muted text-center font-size-18"><b>Sign In</b></h4>

<div class="p-3">
    <form method="post" class="form-horizontal mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group mb-3 row">
            <div class="col-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group mb-3 row">
            <div class="col-12">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group mb-3 row">
            <div class="col-12">
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </div>
            </div>
        </div>

        <div class="form-group mb-3 text-center row mt-3 pt-1">
            <div class="col-12">
                <button class="btn btn-info w-100 waves-effect waves-light" type="submit">Log In</button>
            </div>
        </div>

        <div class="form-group mb-0 row mt-2">
            <div class="col-sm-7 mt-3">
                <a asp-page="./ForgotPassword" class="text-muted"><i class="mdi mdi-lock"></i> Forgot your password?</a>
            </div>
            <div class="col-sm-5 mt-3">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-muted"><i class="mdi mdi-account-circle"></i> Create an account</a>
            </div>
        </div>
    </form>
</div>

               

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



