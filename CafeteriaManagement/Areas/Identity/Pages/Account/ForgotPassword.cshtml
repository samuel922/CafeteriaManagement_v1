@page
@model ForgotPasswordModel

<div class="text-center mt-4">
    <div class="mb-3">
        <a href="index.html" class="auth-logo">
            <img src="~/images/loci-logo.jpg" height="30" class="logo-dark mx-auto" alt="">
            @* <img src="~/assets/images/logo-light.png" height="30" class="logo-light mx-auto" alt=""> *@
        </a>
    </div>
</div>

<h4 class="text-muted text-center font-size-18"><b>Reset Password</b></h4>

<div class="p-3">
    <form method="post" class="form-horizontal mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>


        <div class="alert alert-info alert-dismissible fade show" role="alert">
            Enter Your <strong>E-mail</strong> and instructions will be sent to you!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <div class="form-group mb-3">
            <div class="col-xs-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group pb-2 text-center row mt-3">
            <div class="col-12">
                <button class="btn btn-info w-100 waves-effect waves-light" type="submit">Send Email</button>
            </div>
        </div>
    </form>
</div>
                   


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
